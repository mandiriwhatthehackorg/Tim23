<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        tools:context=".ui.menu.MenuActivity">
    <LinearLayout
            android:background="@drawable/ic_nav"
            android:orientation="horizontal"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:scaleY="1.4"
            android:gravity="center_vertical"
            android:layout_height="64dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                android:id="@+id/btnBack"
                tools:ignore="VectorDrawableCompat"/>
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_semibold"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:lineSpacingExtra="10sp"
                android:text="Funding Express"
        />
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="#f9f9f9">
            <androidx.cardview.widget.CardView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="2dp"
                    android:id="@+id/uiDanacepat"
                    android:background="@drawable/ic_bg1"
                    android:layout_height="160dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:scaleType="fitXY"
                            android:layout_marginLeft="-11dp"
                            android:layout_marginTop="-6dp"
                            android:layout_marginRight="-11dp"
                            android:layout_marginBottom="-12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_bg1"
                            android:id="@+id/imageView2" tools:ignore="VectorDrawableCompat"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:textSize="17.6sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="2.4sp"
                                android:text="Tidak perlu khawatir" android:layout_width="wrap_content"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="42dp" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="160dp"/>
                        <TextView
                                android:textSize="17.6sp"
                                android:textColor="#ea7200"
                                android:lineSpacingExtra="2.4sp"
                                android:text="Kami ada dan cepat"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/uiName"
                                app:layout_constraintTop_toBottomOf="@+id/textView"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="160dp"
                        />
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:background="#ffff"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/constraintLayout">

                            <TextView
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textSize="14.4sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="10sp"
                                    android:text="Dana Cepat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView3"
                                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                            <TextView
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textSize="8sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Ajukan dana cepat, diwaktu yang tepat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/uiSaldo"
                                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                            <TextView
                                    android:paddingLeft="18dp"
                                    android:paddingRight="18dp"
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="10sp"
                                    android:gravity="center_horizontal"
                                    android:text="Ajukan"
                                    android:background="@drawable/ic_btn_ajukan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView14"
                                    android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
                                    android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="30dp"
                                android:layout_height="93dp" android:src="@drawable/ic_icon_danacepat"
                                android:id="@+id/imageView3" app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="28dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    app:cardElevation="2dp"
                    android:id="@+id/uiDanapendidikan"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="2dp"
                    android:layout_height="160dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:scaleType="fitXY"
                            android:layout_marginLeft="-11dp"
                            android:layout_marginTop="-6dp"
                            android:layout_marginRight="-11dp"
                            android:layout_marginBottom="-12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_bg2"
                            android:id="@+id/imageViesw2" tools:ignore="VectorDrawableCompat"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:textSize="17.6sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="2.4sp"
                                android:text="Keterbatasan dana"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView6" android:layout_marginStart="160dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp"
                                app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView7"
                                android:textSize="17.6sp"
                                android:textColor="#ea7200"
                                android:lineSpacingExtra="2.4sp"
                                android:text="bukan alasan"
                                app:layout_constraintTop_toBottomOf="@+id/textView6"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"/>
                        <TextView
                                android:textSize="17.6sp"
                                android:textColor="#ea7200"
                                android:lineSpacingExtra="2.4sp"
                                android:text="berhenti"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/uiId"
                                app:layout_constraintTop_toBottomOf="@+id/textView7"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"/>
                        <TextView
                                android:textSize="17.6sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="2.4sp"
                                android:text=" bercita-cita" android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView9" app:layout_constraintStart_toEndOf="@+id/uiId"
                                app:layout_constraintTop_toBottomOf="@+id/textView7"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:background="#ffff"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                    android:paddingLeft="18dp"
                                    android:paddingRight="18dp"
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="10sp"
                                    android:gravity="center_horizontal"
                                    android:text="Ajukan"
                                    android:background="@drawable/ic_btn_ajukan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView5"
                                    android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
                                    android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"/>
                            <TextView
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textSize="14.4sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="10sp"
                                    android:text="Dana Pendidikan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView15"
                                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="10dp"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
                            <TextView
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textSize="8sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Ajukan dana pendidikan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView17"
                                    app:layout_constraintTop_toBottomOf="@+id/textView15"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="52dp"
                                android:layout_height="79dp" app:srcCompat="@drawable/ic_icon_danamahasiswa"
                                android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="12dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    app:cardElevation="2dp"
                    android:id="@+id/uiDanausaha"
                    app:cardCornerRadius="10dp"
                    app:cardMaxElevation="3dp"
                    android:layout_height="160dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:scaleType="fitXY"
                            android:layout_marginLeft="-11dp"
                            android:layout_marginTop="-6dp"
                            android:layout_marginRight="-11dp"
                            android:layout_marginBottom="-12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_bg3"
                            android:id="@+id/imageVisew2" tools:ignore="VectorDrawableCompat"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"
                                android:textSize="17.6sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="2.4sp"
                                android:text="Hilangkan batas,"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView11"
                                android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
                                app:layout_constraintBottom_toTopOf="@+id/textView12"/>
                        <TextView
                                android:textSize="17.6sp"
                                android:textColor="#ea7200"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:lineSpacingExtra="2.4sp"
                                android:text="Jadikan bisnismu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView12"
                                app:layout_constraintTop_toBottomOf="@+id/textView11"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
                        />
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"
                                android:textSize="17.6sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="2.4sp"
                                android:text="nyata"                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView13"
                                app:layout_constraintTop_toBottomOf="@+id/textView12"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:background="#ffffff"
                                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                    android:paddingLeft="18dp"
                                    android:paddingRight="18dp"
                                    android:paddingTop="5dp"
                                    android:textSize="10sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="10sp"
                                    android:gravity="center_horizontal"
                                    android:text="Ajukan"
                                    android:background="@drawable/ic_btn_ajukan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView10"
                                    android:layout_marginBottom="10dp"
                                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"
                                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginEnd="10dp"/>
                            <TextView
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textSize="14.4sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="10sp"
                                    android:text="Dana Usaha"                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView18" app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="parent"
                                    android:layout_marginTop="8dp"/>
                            <TextView
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textSize="8sp"
                                    android:textColor="#003d79"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Ajukan dana kembangkan usaha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView19"
                                    app:layout_constraintTop_toBottomOf="@+id/textView18"
                                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <ImageView
                                android:textSize="8sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="4sp"
                                android:text="Ajukan dana kembangkan usaha"
                                android:scaleType="fitXY"
                                android:layout_width="35dp"
                                android:layout_height="94dp"
                                app:srcCompat="@drawable/ic_icon_danausaha"
                                android:id="@+id/imageView5" app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="28dp" tools:ignore="VectorDrawableCompat"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>