<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        tools:context=".ui.details.DetailActivity"
        android:layout_width="match_parent">
    <ImageView
            android:src="@drawable/ic_bg_report"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="-15dp"
            android:layout_marginBottom="-22dp"
            android:id="@+id/bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.menu.MenuActivity">
        <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="105dp"
                android:layout_marginTop="105dp" android:layout_marginEnd="45dp" android:layout_marginStart="45dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/constraintLayout2"
                    android:background="#ffff"
                >
                <TextView
                        android:textSize="17.6sp"
                        android:textColor="#003d79"
                        android:lineSpacingExtra="10sp"
                        android:gravity="center_horizontal"
                        android:text="Selesai"
                        android:background="@drawable/ic_btn_report"
                        android:layout_width="match_parent"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_height="wrap_content" android:id="@+id/uiSelesai"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginBottom="20dp"
                        app:layout_constraintHorizontal_bias="0.502"/>
                <TextView
                        android:shadowColor="#0d000000"

                        android:shadowDx="2"

                        android:shadowDy="2"
                        android:textSize="32sp"
                        android:textColor="#ea7200"
                        android:lineSpacingExtra="10sp"
                        android:gravity="center_horizontal"
                        android:text="Rp5.000.000" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView26"
                        android:fontFamily="@font/myriadpro_semibold"
                        app:layout_constraintTop_toBottomOf="@+id/textView27"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="23dp"/>
                <TextView
                        android:textSize="17.6sp"

                        android:textColor="#003d79"

                        android:lineSpacingExtra="2.4sp"
                        android:fontFamily="@font/myriadpro_semibold"
                        android:text="Paket 1-  Dana Pendidikan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView27" android:layout_marginTop="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="23dp"
                />
                <TextView
                        android:textSize="17.6sp"
                        android:textColor="#003d79"
                        android:fontFamily="@font/myriadpro_light"
                        android:lineSpacingExtra="2.4sp"

                        android:text="Selamat, proses pinjamanmu \nsedang diajukan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView28"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView26"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"
                />
                <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="230dp"
                        android:layout_height="160dp" android:src="@drawable/ic_image_succes"
                        android:id="@+id/imageView" android:layout_marginTop="45dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
