<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="#f9f9f9"
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.rincian.RincianActivity">
        <LinearLayout
                android:background="@drawable/ic_nav"
                android:orientation="horizontal"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:layout_width="match_parent"
                android:scaleY="1.4"
                android:gravity="center_vertical"
                android:layout_height="64dp"
                android:id="@+id/linearLayout">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:id="@+id/uiBack"
                    tools:ignore="VectorDrawableCompat"/>
            <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="10sp"
                    android:text="Rincian"
            />
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView4"
                android:layout_marginTop="8dp">
            <LinearLayout
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#ffffff">
                <LinearLayout
                        android:layout_marginTop="-70dp"
                        android:background="@drawable/group_405"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="328dp"
                        android:id="@+id/btnBack"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        >
                </LinearLayout>
                <TextView
                        android:fontFamily="@font/myriadpro_semibold"
                        android:background="@drawable/ic_bar"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14.4sp"
                        android:textColor="#003d79"
                        android:lineSpacingExtra="10sp"
                        android:text="Tenor Cicilan"

                />
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        app:layout_constraintTop_toBottomOf="@+id/btnBack"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                    <Spinner
                            android:entries="@array/tenor"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            tools:listitem="@layout/support_simple_spinner_dropdown_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/spinner"/>
                </LinearLayout>
                <TextView
                        android:fontFamily="@font/myriadpro_semibold"
                        android:background="@drawable/ic_bar"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14.4sp"
                        android:textColor="#003d79"
                        android:lineSpacingExtra="10sp"
                        android:text="Unggah Dokumen"
                />
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"
                                android:paddingRight="20dp"
                                android:background="@drawable/ic_upload_ktp"
                                android:textSize="12sp"
                                android:textColor="#959595"
                                android:lineSpacingExtra="3sp"
                                android:gravity="center_horizontal"
                                android:text="Unggah KTP disini"
                                android:paddingBottom="15dp"
                                android:paddingTop="15dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/view2"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                            android:textSize="12sp"
                            android:textColor="#959595"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/ic_upload_ktp"
                            android:lineSpacingExtra="3sp"
                            android:gravity="center_horizontal"
                            android:text="Unggah KTP disini" android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView34"/>
                </LinearLayout>
                <TextView
                        android:background="@drawable/ic_bar"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14.4sp"
                        android:textColor="#003d79"
                        android:lineSpacingExtra="10sp"
                        android:text="Jumlah Pinjaman"
                />
                <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff">
                    <LinearLayout
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:fontFamily="@font/myriadpro_light"
                                android:textSize="14.4sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="5.6sp"
                                android:text="Paket 1 - Dana Pendidikan"                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"
                                android:textSize="14.4sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="5.6sp"
                                android:gravity="end"
                                android:text="Rp5.000.000"                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:fontFamily="@font/myriadpro_light"
                                android:textSize="14.4sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="5.6sp"
                                android:text="Bunga Pinjaman -"                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                />
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"
                                android:textSize="14.4sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="5.6sp"
                                android:text=" 5%"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"
                                android:textSize="14.4sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="5.6sp"
                                android:gravity="end"
                                android:text="Rp250.000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                            android:fontFamily="@font/myriadpro_semibold"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:textSize="14.4sp"
                                android:fontFamily="@font/myriadpro_light"
                                android:textColor="#003d79"

                                android:lineSpacingExtra="5.6sp"

                                android:text="Administrasi"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"

                                android:textSize="14.4sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="5.6sp"
                                android:gravity="end"
                                android:text="Rp50.000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <View
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="#B6B8BA"
                            android:layout_width="match_parent"
                            android:layout_height="2dp" android:id="@+id/view3"/>
                    <LinearLayout
                            android:fontFamily="@font/myriadpro_semibold"
                            android:orientation="horizontal"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:textSize="14.4sp"
                                android:fontFamily="@font/myriadpro_light"
                                android:textColor="#003d79"

                                android:lineSpacingExtra="5.6sp"

                                android:text="Jumlah"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        <TextView
                                android:fontFamily="@font/myriadpro_semibold"
                                android:textSize="14.4sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="5.6sp"
                                android:gravity="end"
                                android:text="Rp5.300.000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/checkBox"
                                />
                        <TextView
                                android:fontFamily="@font/myriadpro_light"
                                android:textSize="12sp"
                                android:textColor="#003d79"
                                android:lineSpacingExtra="3sp"
                                android:text="Dengan menggunakan Layanan kami, berarti Anda menyetujui persyaratan ini."
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" 
                                android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/ic_btn_succes"
                        android:textSize="17.6sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="10sp"
                        android:gravity="center_horizontal"
                        android:text="Setuju"
                        android:fontFamily="@font/myriadpro_semibold"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/uiSetuju"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
