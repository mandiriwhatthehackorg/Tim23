<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="270dp"
        android:layout_marginLeft="40dp"
        android:layout_height="440dp"  >
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.rincian.RincianActivity">
    <TextView
            android:textSize="17.6sp"
            android:textColor="#003d79"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            android:text="Paket 1-  Dana Pendidikan" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriadpro_semibold"
            android:id="@+id/uiName" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:shadowColor="#0d000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textSize="32sp"
            android:textColor="#ea7200"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            android:text="Rp5.000.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uiDana"
            android:fontFamily="@font/myriadpro_semibold"
            app:layout_constraintTop_toBottomOf="@+id/uiName" android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:textSize="10sp"
            android:textColor="#003d79"
            android:lineSpacingExtra="13.3sp"
            android:gravity="center_horizontal"
            tools:text="Cicilan mulai Rp450.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uiCicilan"
            android:fontFamily="@font/myriadpro_light"
            app:layout_constraintTop_toBottomOf="@+id/uiDana"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>
    <View
            android:layout_width="0dp"
            android:background="#B6B8BA"
            android:layout_height="2dp" android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/uiCicilan"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:textSize="14.4sp"
            android:textColor="#003d79"
            android:lineSpacingExtra="5.6sp"
            android:fontFamily="@font/myriadpro_light"
            android:text="Dana pinjaman untuk melanjutkan perguruan tinggi"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="15dp"
            android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:textSize="14.4sp"
            android:textColor="#003d79"
            android:lineSpacingExtra="5.6sp"
            android:fontFamily="@font/myriadpro_light"
            android:text="Angsuran fleksibel 3, 6 &amp; 12 bulan" android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView30" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView29" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp"/>
    <TextView
            android:textSize="14.4sp"
            android:textColor="#003d79"
            android:lineSpacingExtra="5.6sp"
            android:text="Proses pencairan cepat" android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:fontFamily="@font/myriadpro_light"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView30"
            android:layout_marginTop="15dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:textSize="17.6sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="10sp"
            android:fontFamily="@font/myriadpro_semibold"
            android:gravity="center_horizontal"
            android:text="Ambil"
            android:layout_width="match_parent"
            android:background="@drawable/ic_btn_succes"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:paddingBottom="20dp"
            android:id="@+id/textView32" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>
    <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp" android:src="@drawable/ic_ellipse_265"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/textView29"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view"/>
    <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp" android:src="@drawable/ic_ellipse_265"
            android:id="@+id/imageView7"
            app:layout_constraintEnd_toStartOf="@+id/textView30"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView31"/>
    <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp" android:src="@drawable/ic_ellipse_265"
            android:id="@+id/imageView8"
            app:layout_constraintEnd_toStartOf="@+id/textView30"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView30"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>