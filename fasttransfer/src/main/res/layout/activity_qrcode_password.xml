<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <ImageView
            android:src="@drawable/bg_detail"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="-15dp"
            android:layout_marginBottom="-22dp"
            android:id="@+id/bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.menu.MenuActivity">
        <LinearLayout
                android:background="@drawable/ic_nav"
                android:orientation="horizontal"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:scaleY="1.4"
                android:gravity="center_vertical"
                android:layout_height="64dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:id="@+id/uiBack"
                    tools:ignore="VectorDrawableCompat"/>
            <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="10sp"
                    android:text="Scan QR Code"
                    android:id="@+id/uiTitle"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:textSize="14.4sp"

                        android:textColor="#003d79"

                        android:lineSpacingExtra="10sp"

                        android:text="Masukan Kode PIN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7" android:layout_marginTop="25dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" android:src="@drawable/ic_ellipse_3"
                        android:id="@+id/ic1" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="30dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp"
                        app:layout_constraintEnd_toStartOf="@+id/ic2" android:layout_marginEnd="15dp"/>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" android:src="@drawable/ic_ellipse_3"
                        android:id="@+id/ic2"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp"
                        app:layout_constraintStart_toEndOf="@+id/ic1" android:layout_marginStart="15dp"
                        app:layout_constraintEnd_toStartOf="@+id/ic3" android:layout_marginEnd="15dp"/>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" android:src="@drawable/ic_ellipse_3"
                        android:id="@+id/ic5"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp"
                        app:layout_constraintStart_toEndOf="@+id/ic4" android:layout_marginStart="15dp"
                        app:layout_constraintEnd_toStartOf="@+id/ic6" android:layout_marginEnd="15dp"/>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" android:src="@drawable/ic_ellipse_3"
                        android:id="@+id/ic6"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp"
                        app:layout_constraintStart_toEndOf="@+id/ic5" android:layout_marginStart="15dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" android:src="@drawable/ic_ellipse_3"
                        android:id="@+id/ic4"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp"
                        app:layout_constraintStart_toEndOf="@+id/ic3"
                        android:layout_marginStart="15dp" app:layout_constraintEnd_toStartOf="@+id/ic5"
                        android:layout_marginEnd="15dp"/>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp" android:src="@drawable/ic_ellipse_3"
                        android:id="@+id/ic3"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp"
                        app:layout_constraintStart_toEndOf="@+id/ic2" android:layout_marginStart="15dp"
                        app:layout_constraintEnd_toStartOf="@+id/ic4" android:layout_marginEnd="15dp"/>
                <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:textSize="32sp"

                        android:textColor="#9197a4"

                        android:lineSpacingExtra="10sp"

                        android:text="3\n\n6\n\n9\n"

                        app:layout_constraintTop_toBottomOf="@+id/ic1" android:layout_marginTop="50dp"
                        app:layout_constraintStart_toEndOf="@+id/btn2" android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/btn3"/>
                <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:textSize="32sp"

                        android:textColor="#9197a4"

                        android:lineSpacingExtra="10sp"

                        android:text="2\n\n5\n\n8\n\n0"

                        app:layout_constraintTop_toBottomOf="@+id/ic1" android:layout_marginTop="50dp"
                        app:layout_constraintStart_toEndOf="@+id/btn1" android:layout_marginStart="20dp"
                        android:id="@+id/btn2" app:layout_constraintEnd_toStartOf="@+id/btn3"
                        android:layout_marginEnd="20dp"/>
                <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:textSize="32sp"

                        android:textColor="#9197a4"

                        android:lineSpacingExtra="10sp"

                        android:text="1\n\n4\n\n7\n"

                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ic1" android:layout_marginTop="50dp"
                        android:id="@+id/btn1" app:layout_constraintEnd_toStartOf="@+id/btn2"
                        android:layout_marginEnd="20dp"/>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="18dp" android:src="@drawable/ic_symbol_2_1"
                        android:id="@+id/imageView10" app:layout_constraintTop_toBottomOf="@+id/btn3"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
                        android:layout_marginTop="25dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="113dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
