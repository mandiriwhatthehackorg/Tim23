<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:layout_width="match_parent">
    <ImageView
            android:src="@drawable/ic_bg_report"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="-15dp"
            android:layout_marginBottom="-22dp"
            android:id="@+id/bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.menu.MenuActivity">
        <LinearLayout
                android:elevation="1dp"
                android:layout_width="match_parent"
                android:background="@drawable/ic_union_10"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="105dp"
                android:layout_marginTop="105dp" android:layout_marginEnd="45dp" android:layout_marginStart="45dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/constraintLayout2"
            >
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="288dp" android:src="@drawable/ic_object"
                        android:id="@+id/btnSucces" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"/>
                <TextView
                        android:textSize="17.6sp"
                        android:fontFamily="@font/myriadpro_light"
                        android:textColor="#003d79"

                        android:lineSpacingExtra="2.4sp"

                        android:text="Arahkan kode QR ke arah kamera."
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="30dp" app:layout_constraintBottom_toTopOf="@+id/btnSucces"
                        android:layout_marginBottom="10dp"/>
                <ImageView
                        android:layout_width="0dp"
                        android:scaleType="fitXY"
                        android:layout_height="4dp" android:src="@drawable/ic_line"
                        android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/textView13"
                        android:layout_marginBottom="20dp" android:layout_marginStart="8dp"
                        android:layout_marginEnd="24dp"/>
                <TextView
                        android:textSize="17.6sp"
                        android:textColor="#003d79"
                        android:lineSpacingExtra="10sp"
                        android:text="Jumlah"
                        android:fontFamily="@font/myriadpro_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="20dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:textSize="24sp"

                        android:textColor="#003d79"

                        android:lineSpacingExtra="10sp"
                        android:fontFamily="@font/myriadpro_semibold"
                        android:text="Rp1.000.000"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        app:layout_constraintTop_toBottomOf="@+id/textView14"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"/>
                <TextView
                        android:textSize="17.6sp"

                        android:textColor="#003d79"
                        android:fontFamily="@font/myriadpro_light"
                        android:lineSpacingExtra="10sp"

                        android:text="Deskripsi" android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16" android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
                <TextView
                        android:textSize="24sp"
                        android:textColor="#003d79"
                        android:lineSpacingExtra="10sp"
                        android:text="Uang hutang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView16"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
