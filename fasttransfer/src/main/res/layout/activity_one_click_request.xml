<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            tools:context=".ui.menu.MenuActivity">
        <LinearLayout
                android:background="@drawable/ic_nav"
                android:orientation="horizontal"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:scaleY="1.4"
                android:gravity="center_vertical"
                android:layout_height="64dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:id="@+id/uiBack"
                    tools:ignore="VectorDrawableCompat"/>
            <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="10sp"
                    android:text="One Click Transfer"
                    android:id="@+id/uiTitle"/>
        </LinearLayout>
        <TextView
                android:textSize="17.6sp"
                android:textColor="#003d79"
                android:lineSpacingExtra="2.4sp"
                android:text="Lakukan transfer dengan cepat " android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:fontFamily="@font/myriadpro_light"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17.6sp"
                android:textColor="#003d79"
                android:fontFamily="@font/myriadpro_semibold"
                android:lineSpacingExtra="2.4sp"
                android:text="Sekarang!"
                android:id="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"/>
        <TextView
                android:background="@drawable/ic_bar"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14.4sp"
                android:textColor="#003d79"
                android:lineSpacingExtra="10sp"
                android:text="Jumlah"
                android:fontFamily="@font/myriadpro_semibold"
                android:id="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Masukan Jumlah"
                android:ems="10"
                android:id="@+id/editText" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:background="@drawable/ic_bar"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:textSize="14.4sp"
                android:textColor="#003d79"
                android:lineSpacingExtra="10sp"
                android:text="Deskripsi (Opsional)"
                android:fontFamily="@font/myriadpro_semibold"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="71dp" android:id="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginTop="15dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Masukan Deskripsi"
                android:ems="10"
                android:id="@+id/editText2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"/>
        <TextView
                android:background="@drawable/ic_btn_succes"
                android:textSize="17.6sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="Lanjut"
                android:fontFamily="@font/myriadpro_semibold"
                android:paddingTop="14dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/uiNext" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
