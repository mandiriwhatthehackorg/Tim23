<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity"
        android:layout_width="match_parent">
    <ImageView
            android:src="@drawable/ic_bg"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/size_415dp"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="-15dp"
            android:id="@+id/bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <ImageView
                android:src="@drawable/ic_photo"
                android:layout_width="@dimen/size_80dp"
                android:layout_height="@dimen/size_80dp" android:id="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/size_30dp" app:layout_constraintHorizontal_bias="0.498"/>
        <ImageView
                android:font="@font/myriadpro_semibold"
                android:src="@drawable/ic_notification"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_24dp" android:id="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_15dp" android:layout_marginEnd="@dimen/size_15dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="M. Nahrowi"
                android:id="@+id/uiName"
                android:fontFamily="@font/myriadpro_regular"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17.6sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="10sp"
                android:text="Saldo"
                android:fontFamily="@font/myriadpro_regular"
                android:id="@+id/textView3" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/uiName" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp"/>
        <TextView
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="10sp"
                android:text="IDR 25,000,000"
                android:fontFamily="@font/myriadpro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uiSaldo"
                app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp" android:layout_marginTop="10dp"/>
        <TextView
                android:textSize="17.6sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="10sp"
                android:text="Nomor Rekening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:fontFamily="@font/myriadpro_regular"
                app:layout_constraintTop_toBottomOf="@+id/uiSaldo" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp" android:layout_marginTop="20dp"/>
        <TextView
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="10sp"
                android:text="9000012345678"                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uiId"
                android:fontFamily="@font/myriadpro_regular"
                app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="18dp" android:layout_marginTop="10dp"/>
        <ImageView
                android:src="@drawable/ic_card_1"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="220dp" android:id="@+id/imageView7"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/uiId" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView7">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uiFunding"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1">
                <ImageView
                        android:src="@drawable/ic_bg_offline"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_marginTop="-6dp"
                        android:layout_marginBottom="-12dp"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="-8dp"
                        android:layout_height="match_parent"
                />
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >
                    <ImageView
                            android:src="@drawable/ic_funding"
                            android:layout_width="@dimen/size_24dp"
                            android:layout_height="@dimen/size_24dp" android:id="@+id/imageView6"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>
                    <TextView
                            android:text="Funding \nExpress"
                            android:textSize="14.4sp"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/myriadpro_regular"
                            android:lineSpacingExtra="0.6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="10dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/uiOffline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1">
                <ImageView
                        android:src="@drawable/ic_bg_funding"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_marginTop="-6dp"
                        android:layout_marginBottom="-12dp"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="-8dp"
                        android:layout_height="match_parent" android:id="@+id/imageView5"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >
                    <ImageView
                            android:src="@drawable/ic_offline"
                            android:layout_width="@dimen/size_24dp"
                            android:layout_height="@dimen/size_24dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>
                    <TextView
                            android:text="Offline \nTransaction"
                            android:textSize="14.4sp"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/myriadpro_regular"
                            android:lineSpacingExtra="0.6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/uiClick"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <ImageView
                        android:src="@drawable/ic_bg_click"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_marginTop="-6dp"
                        android:layout_marginBottom="-12dp"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="-8dp" android:layout_height="match_parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >
                    <ImageView
                            android:src="@drawable/mask_group_2"
                            android:layout_width="@dimen/size_24dp"
                            android:layout_height="@dimen/size_24dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>
                    <TextView
                            android:text="One Click \nTransfer"
                            android:textSize="14.4sp"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/myriadpro_regular"
                            android:lineSpacingExtra="0.6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
                android:src="@drawable/ic_qrcode"
                android:layout_width="24dp"
                android:layout_height="@dimen/size_24dp"
                android:id="@+id/uiQrcode" app:layout_constraintEnd_toStartOf="@+id/imageView3"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>