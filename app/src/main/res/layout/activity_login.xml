<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/group_417"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="10dp"
            android:layout_height="340dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="45dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="104dp"
                    android:scaleType="fitXY"
                    android:layout_height="49dp" android:src="@drawable/ic_logo" android:id="@+id/imageView10"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
            <EditText
                    android:textSize="14.4sp"
                    android:textColor="#b6b8ba"
                    android:lineSpacingExtra="5.6sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="User ID"
                    android:ems="10"
                    android:fontFamily="@font/myriadpro_light"
                    android:id="@+id/uiUser" android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView10" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:textSize="14.4sp"
                    android:textColor="#b6b8ba"
                    android:lineSpacingExtra="5.6sp"
                    android:hint="Password"
                    android:id="@+id/uiPassword"
                    android:fontFamily="@font/myriadpro_light"
                    app:layout_constraintTop_toBottomOf="@+id/uiSalahUser" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
            <TextView
                    android:textSize="8sp"
                    android:textColor="#ff535e"
                    android:visibility="invisible"
                    android:lineSpacingExtra="12sp"
                    android:text="* User ID Anda salah" android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/uiSalahUser"
                    android:fontFamily="@font/myriadpro_light"
                    app:layout_constraintTop_toBottomOf="@+id/uiUser" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
            <TextView
                    android:textSize="8sp"
                    android:visibility="invisible"
                    android:textColor="#ff535e"
                    android:lineSpacingExtra="12sp"
                    android:fontFamily="@font/myriadpro_light"
                    android:text="* Password Anda salah" android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/uiSalahPassword"
                    app:layout_constraintTop_toBottomOf="@+id/uiPassword" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"/>
            <TextView
                    android:paddingTop="14dp"
                    android:paddingBottom="20dp"
                    android:textSize="17.6sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="Sign In"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:background="@drawable/ic_btn_succes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnLogin"
                    app:layout_constraintTop_toBottomOf="@+id/uiSalahPassword" android:layout_marginTop="26dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="18dp"/>
            <TextView
                    android:textSize="17.6sp"
                    android:textColor="#003d79"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="Lupa User ID/Password"
                    android:layout_width="0dp"
                    android:fontFamily="@font/myriadpro_semibold"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView40" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnLogin" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>